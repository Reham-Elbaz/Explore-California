@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model ExploreCalifornia.Models.Post
@{
    Layout = "_Layout";
}

<fieldset>
    <form asp-action="Create" asp-controller="Blog" method="post">
        @*@Html.ValidationSummary()*@
        <div asp-validation-summary="All" class="input-validation-error"></div>
        <p>
            @*
                @Html.LabelFor(x => x.Title)
                @Html.EditorFor(x => x.Title)
                @Html.ValidationMessageFor(x => x.Title)
            *@
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" placeholder="blog post title" />
            <span asp-validation-for="Title"></span>
        </p>
        <p>
            @*
            @Html.LabelFor(x => x.Body)
            @Html.EditorFor(x => x.Body)
            @Html.ValidationMessageFor(x => x.Body)
            *@
            <label asp-for="Body"></label>
            <input asp-for="Body" class="form-control" placeholder="blog post title" />
            <span asp-validation-for="Body"></span>
        </p>
        <p>
            <button type="submit">Create Post</button>
        </p>
    </form>
</fieldset>
